<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_32sdp"
    android:paddingLeft="@dimen/_32sdp"
    android:paddingRight="@dimen/_32sdp"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/_20sdp">

    <EditText
        android:id="@+id/jobTitleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:hint="Job Title"/>

    <EditText
        android:id="@+id/jobDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobTitleEditText"
        android:layout_marginTop="16dp"
        android:hint="Job Description"
        android:maxLines="5"
        android:fontFamily="@font/poppins_medium"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/numberOfOpeningsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jobDescriptionEditText"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:fontFamily="@font/poppins_medium"
        android:hint="Number of Openings"/>

    <EditText
        android:id="@+id/salaryEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOfOpeningsEditText"
        android:layout_marginTop="16dp"
        android:inputType="number"
        android:hint="Salary"
        android:fontFamily="@font/poppins_medium"/>

    <Button
        android:id="@+id/postJobButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salaryEditText"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginVertical="@dimen/_32sdp"
        android:text="Post Job"/>

</RelativeLayout>
